<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/txtTituloConsult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta y modificación de eventos"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <!-- TARJETA: FILTROS DE BÚSQUEDA -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- SELECCIÓN DE CRITERIO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criterio de consulta:"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <RadioGroup
                    android:id="@+id/rgCriterio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/rbFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha" />

                    <RadioButton
                        android:id="@+id/rbRango"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rango" />

                    <RadioButton
                        android:id="@+id/rbMes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mes" />

                    <RadioButton
                        android:id="@+id/rbAnio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Año" />
                </RadioGroup>

                <!-- Consulta por FECHA -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha:"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFechaConsulta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Seleccionar fecha"
                        android:focusable="false"
                        android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Consulta por RANGO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rango de fechas:"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFechaInicio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fecha inicio"
                            android:focusable="false"
                            android:clickable="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFechaFin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fecha fin"
                            android:focusable="false"
                            android:clickable="true" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Consulta por MES -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes:"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spMes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_marginBottom="12dp" />

                <!-- Consulta por AÑO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Año:"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAnio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ejemplo: 2025"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- FILTRO POR TIPO DE EVENTO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de evento:"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spTipoEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_marginBottom="16dp" />

                <!-- BOTÓN CONSULTAR -->
                <Button
                    android:id="@+id/btnBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buscar eventos" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- TARJETA: RESULTADOS -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultados:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TableLayout
                    android:id="@+id/tableResultados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1,2">

                    <!-- ENCABEZADOS -->
                    <TableRow
                        android:background="#DDDDDD">

                        <TextView
                            android:text="Fecha"
                            android:textStyle="bold"
                            android:padding="6dp" />
                        <TextView
                            android:text="Tipo"
                            android:textStyle="bold"
                            android:padding="6dp" />
                        <TextView
                            android:text="Contacto"
                            android:textStyle="bold"
                            android:padding="6dp" />
                    </TableRow>

                    <!-- FILAS DE EJEMPLO -->
                    <TableRow>
                        <TextView
                            android:text="20/05/2025"
                            android:padding="4dp" />
                        <TextView
                            android:text="Cita"
                            android:padding="4dp" />
                        <TextView
                            android:text="Alejandro"
                            android:padding="4dp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="22/05/2025"
                            android:padding="4dp" />
                        <TextView
                            android:text="Junta"
                            android:padding="4dp" />
                        <TextView
                            android:text="María"
                            android:padding="4dp" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
