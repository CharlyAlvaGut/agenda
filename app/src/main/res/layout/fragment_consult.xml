<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/txtTituloConsult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta y modificación de eventos"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <!-- TARJETA: FILTROS DE BÚSQUEDA -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- SELECCIÓN DE CRITERIO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criterio de consulta:"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <RadioGroup
                    android:id="@+id/rgCriterio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/rbFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha" />

                    <RadioButton
                        android:id="@+id/rbRango"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rango" />

                    <RadioButton
                        android:id="@+id/rbMes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mes" />

                    <RadioButton
                        android:id="@+id/rbAnio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Año" />
                </RadioGroup>

                <!-- ===================== -->
                <!--    BLOQUE: FECHA      -->
                <!-- ===================== -->
                <LinearLayout
                    android:id="@+id/layoutFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha:"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFechaConsulta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Seleccionar fecha"
                            android:focusable="false"
                            android:clickable="true" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- ===================== -->
                <!--    BLOQUE: RANGO      -->
                <!-- ===================== -->
                <LinearLayout
                    android:id="@+id/layoutRango"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rango de fechas:"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etFechaInicio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Fecha inicio"
                                android:focusable="false"
                                android:clickable="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Space
                            android:layout_width="8dp"
                            android:layout_height="wrap_content" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etFechaFin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Fecha fin"
                                android:focusable="false"
                                android:clickable="true" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- ===================== -->
                <!--     BLOQUE: MES       -->
                <!-- ===================== -->
                <LinearLayout
                    android:id="@+id/layoutMes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mes:"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spMes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <!-- ===================== -->
                <!--      BLOQUE: AÑO      -->
                <!-- ===================== -->
                <LinearLayout
                    android:id="@+id/layoutAnio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Año:"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAnio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ejemplo: 2025"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- FILTRO POR TIPO DE EVENTO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de evento:"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spTipoEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_marginBottom="16dp" />

                <!-- BOTÓN CONSULTAR -->
                <Button
                    android:id="@+id/btnBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buscar eventos" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- TARJETA: RESULTADOS -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultados:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- AQUÍ SE AGREGARÁN LAS TARJETAS DINÁMICAMENTE -->
                <LinearLayout
                    android:id="@+id/containerResultados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</ScrollView>
