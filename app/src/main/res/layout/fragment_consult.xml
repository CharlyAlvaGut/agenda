<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/txtTituloConsult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta y modificación de eventos"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <!-- SELECCIÓN DE CRITERIO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criterio de consulta:" />

        <RadioGroup
            android:id="@+id/rgCriterio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <RadioButton
                android:id="@+id/rbFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha" />

            <RadioButton
                android:id="@+id/rbRango"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rango" />

            <RadioButton
                android:id="@+id/rbMes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mes" />

            <RadioButton
                android:id="@+id/rbAnio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Año" />
        </RadioGroup>

        <!-- FILTROS DE FECHA / RANGO / MES / AÑO -->

        <!-- Consulta por FECHA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:" />

        <EditText
            android:id="@+id/etFechaConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccionar fecha"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="12dp" />

        <!-- Consulta por RANGO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rango de fechas:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etFechaInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Fecha inicio"
                android:focusable="false"
                android:clickable="true" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etFechaFin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Fecha fin"
                android:focusable="false"
                android:clickable="true" />
        </LinearLayout>

        <!-- Consulta por MES -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mes:" />

        <Spinner
            android:id="@+id/spMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_marginBottom="12dp" />

        <!-- Consulta por AÑO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Año:" />

        <EditText
            android:id="@+id/etAnio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ejemplo: 2025"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <!-- FILTRO POR TIPO DE EVENTO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de evento:" />

        <Spinner
            android:id="@+id/spTipoEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_marginBottom="16dp" />

        <!-- BOTÓN CONSULTAR -->
        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar eventos"
            android:layout_marginBottom="16dp" />

        <!-- RESULTADOS (TABLA DE EJEMPLO) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TableLayout
            android:id="@+id/tableResultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2">

            <!-- ENCABEZADOS -->
            <TableRow>
                <TextView
                    android:text="Fecha"
                    android:textStyle="bold"
                    android:padding="4dp" />
                <TextView
                    android:text="Tipo"
                    android:textStyle="bold"
                    android:padding="4dp" />
                <TextView
                    android:text="Contacto"
                    android:textStyle="bold"
                    android:padding="4dp" />
            </TableRow>

            <!-- FILAS DE EJEMPLO -->
            <TableRow>
                <TextView
                    android:text="20/05/2025"
                    android:padding="4dp" />
                <TextView
                    android:text="Cita"
                    android:padding="4dp" />
                <TextView
                    android:text="Alejandro"
                    android:padding="4dp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="22/05/2025"
                    android:padding="4dp" />
                <TextView
                    android:text="Junta"
                    android:padding="4dp" />
                <TextView
                    android:text="María"
                    android:padding="4dp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</ScrollView>
